{
	"extends": "@hybrd/tsconfig/base.json",
	"compilerOptions": {
		"rootDir": ".",
		"target": "ES2020",
		"lib": ["ES2020"],
		"outDir": "dist",
		"isolatedModules": false,
		"noEmit": false,
		"declaration": true,
		"module": "ES2020",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
