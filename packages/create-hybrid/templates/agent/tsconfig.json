{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2022"],
		"types": ["node"],
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"]
}
