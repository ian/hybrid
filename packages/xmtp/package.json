{
	"name": "@hybrd/xmtp",
	"version": "1.3.2",
	"type": "module",
	"files": ["dist", "src"],
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "tsup",
		"build:watch": "tsup --watch",
		"clean": "rm -rf .turbo dist",
		"test": "vitest run",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint --unsafe",
		"lint:fix": "biome lint --write --unsafe",
		"format": "biome format --write"
	},
	"dependencies": {
		"@hybrd/types": "workspace:*",
		"@xmtp/agent-sdk": "^0.0.12",
		"@xmtp/content-type-group-updated": "2.0.2",
		"@xmtp/content-type-reaction": "2.0.2",
		"@xmtp/content-type-reply": "2.0.2",
		"@xmtp/content-type-text": "2.0.2",
		"@xmtp/content-type-transaction-reference": "2.0.2",
		"@xmtp/content-type-wallet-send-calls": "2.0.0",
		"@xmtp/node-sdk": "^4.1.0",
		"hono": "^4.7.4",
		"jsonwebtoken": "^9.0.2",
		"uint8arrays": "^5.1.0",
		"viem": "^2.22.17"
	},
	"devDependencies": {
		"@config/biome": "workspace:*",
		"@config/tsconfig": "workspace:*",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node": "catalog:stack",
		"tsup": "^8.5.0",
		"vitest": "^3.2.4"
	}
}
