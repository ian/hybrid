{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "ES2020",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"noEmit": false,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"isolatedModules": false,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
